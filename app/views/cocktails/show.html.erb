<h1><%= @cocktail.name %></h1>
<h2>Ingredients</h2>
<h3><% doses = @cocktail.doses %></h3>
<ul>
  <% doses.each do |dose| %>
<li>
  <%= dose.description %>
  <%= dose.ingredient.name %>
</li>
<% end %>
</ul>

<%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %> <br>
<%= link_to 'Back to all cocktails', cocktails_path %>

